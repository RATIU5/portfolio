---
import "@fontsource/lato";
import "@fontsource-variable/literata/opsz.css";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const {
    title,
    description = "The portfolio of RATIU5, featuring innovative projects, technical articles, and insights into modern software development. A hub for expertise, creativity, and technology trends.",
} = Astro.props;
---

<html lang="en" class="bg-neutral-100 text-neutral-800">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content={description} />
        <meta name="title" content={title} />
        <meta name="robots" content="index, follow" />
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="language" content="English" />
        <meta name="author" content="RATIU5" />
        <link rel="icon" type="image/svg+xml" href="/logo.svg" />
        <title>{title}</title>
    </head>
    <body class="max-w-[65ch] px-4 pb-20 mx-auto md:pb-0">
        <div
            class="flex flex-col justify-center h-auto min-h-screen md:justify-start"
        >
            <Header class="md:mb-20" />
            <div class="flex items-center justify-center h-full">
                <slot />
            </div>
        </div>
        <Footer />
    </body>
</html>
